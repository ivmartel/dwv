{
    "plugins": ["node_modules/jsdoc/plugins/markdown"],
    "markdown": {
      "idInHeadings": true
    },
    "source": {
      "include": [
        "src",
        "tests"
      ]
    },
    "templates": {
      "default": {
        "staticFiles": {
          "include": ["resources/doc/img"]
        }
      }
    },
    "opts": {
      "recurse": true,
      "readme": "resources/doc/readme-doc.md",
      "destination": "build/doc",
      "template": "node_modules/clean-jsdoc-theme",
      "tutorials": "resources/doc/tutorials",
      "package": "package.json",
      "theme_opts": {
        "title": "DWV",
        "footer": "<i>Documentation generated for dwv v0.33.0-beta.43.</i>",
        "sections": [
          "Tutorials",
          "Namespaces",
          "Events",
          "Classes",
          "Externals",
          "Modules"
        ],
        "menu": [
          {
            "title": "github",
            "link": "https://github.com/ivmartel/dwv",
            "target": "_blank"
          },
          {
            "title": "npm",
            "link": "https://www.npmjs.com/package/dwv",
            "target": "_blank"
          }
        ],
        "create_style": "ul {list-style-type: disc !important;} ul ul {list-style-type: circle !important;} ul li {padding: .2rem 0 !important;}",
        "codepen": {
          "enable_for": ["examples"],
          "options": {
            "js_external": "https://github.com/ivmartel/dwv/releases/download/v0.33.0-beta.43/dwv-0.33.0-beta.43.min.js",
            "html": "<div id='dwv'><div id='layerGroup0'></div></div>"
          }
        }
      }
    }
}
